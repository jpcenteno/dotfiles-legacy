[user]
    email = jpcenteno@users.noreply.github.com
    name = Joaqu√≠n P. Centeno

[core]
    excludesfile = ~/.gitignore

[alias]

    s   = status

    c   = commit

    a   = add
    ap  = add -p

    b = branch

    co  = checkout
    cob = checkout -b

    pu  = pull
    pur = pull --rebase

    df  = diff
    dfc = diff --cached
    # List files touched by a specific commit.
    # usage: 'git dfls <HASH>'
    dfls = "!f() { git diff --name-status $1 $1~; }; f"

    # src: https://coderwall.com/p/euwpig/a-better-git-log
    lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

    delete-every-other-branch = "!git branch | grep -v '^*' | xargs git branch -D"
